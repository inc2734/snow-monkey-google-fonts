{
	"engines": {
		"node": ">=20.10.0",
		"npm": ">=10.2.3"
	},
	"volta": {
		"node": "20.11.1"
	},
	"author": "inc2734",
	"license": "GPL-2.0+",
	"devDependencies": {
		"@wordpress/browserslist-config": "^5.36.0",
		"@wordpress/env": "9.5.0",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.5"
	},
	"scripts": {
		"export:wp-content:themes": "npm run cli cp -- -r wp-content/themes .export/wp-content",
		"export:wp-content:uploads": "npm run cli cp -- -r wp-content/uploads .export/wp-content",
		"export:wp-content": "npm run cli rm -- -rf .export/wp-content && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
		"export:db": "mkdir -p .export/sql && npm run wp db -- export .export/sql/local.sql",
		"export": "run-p export:*",
		"import:wp-content:themes": "npm run cli cp -- -r .export/wp-content/themes wp-content",
		"import:wp-content:uploads": "npm run cli cp -- -r .export/wp-content/uploads wp-content",
		"import:wp-content": "run-p import:wp-content:*",
		"import:db": "npm run wp db -- import .export/sql/local.sql",
		"import": "run-p import:*",
		"wp-env": "wp-env",
		"start": "wp-env start && open http://localhost:8888",
		"stop": "npm run export && wp-env stop",
		"cli": "wp-env run cli",
		"wp": "wp-env run cli --env-cwd=\"wp-content/plugins/snow-monkey-google-fonts\" wp",
		"composer": "wp-env run cli --env-cwd=\"wp-content/plugins/snow-monkey-google-fonts\" composer",
		"pretest": "wp-env start && npm run composer install -- --no-interaction",
		"test:lint:php": "wp-env start && npm run composer lint",
		"test:lint": "run-s test:lint:*",
		"test:unit:php": "wp-env run --env-cwd=\"wp-content/plugins/snow-monkey-google-fonts\" tests-wordpress vendor/bin/phpunit -c .phpunit.xml.dist --verbose",
		"test:unit": "run-s test:unit:*",
		"test": "run-s test:*",
		"clean:zip": "rimraf snow-monkey-google-fonts.zip",
		"zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.xml.dist' --exclude='/tests' --exclude='package*.json' . snow-monkey-google-fonts && wp-env start && npm run composer install -- --no-dev -d snow-monkey-google-fonts",
		"zip:archive": "zip -9 -qmr snow-monkey-google-fonts.zip snow-monkey-google-fonts",
		"zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive",
		"make-pot": "npm run wp i18n -- make-pot . ./languages/snow-monkey-google-fonts.pot --exclude=src"
	},
	"dependencies": {}
}
